@{
    ViewBag.Title = "流暢經驗量表結果";
    Layout = "~/Views/Shared/_MindRadarLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>流暢經驗量表結果</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold text-center mb-6">流暢經驗量表結果</h1>

        <!-- **每一題的填答分數** -->
        <div class="bg-white shadow-md rounded p-6">
            <h2 class="text-lg font-bold mb-4">填答結果 - 每個問題</h2>
            <table class="border border-gray-400 w-full">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="border border-gray-400 px-4 py-2 text-center">題號</th>
                        <th class="border border-gray-400 px-4 py-2 text-center">題目</th>
                        <th class="border border-gray-400 px-4 py-2 text-center">分數</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var question in (List<Dictionary<string, object>>)ViewBag.QuestionScores)
                    {
                        <tr>
                            <td class="border border-gray-400 px-4 py-2 text-center">@question["QuestionID"]</td>
                            <td class="border border-gray-400 px-4 py-2">@question["QuestionText"]</td>
                            <td class="border border-gray-400 px-4 py-2 text-center">@question["Score"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- **雷達圖 - 類別平均分數** -->
        <div class="bg-white shadow-md rounded p-6 mt-6">
            <h2 class="text-lg font-bold mb-4">類別平均分數</h2>
            <canvas id="radarChart"></canvas>
        </div>

        <!-- 返回按鈕 -->
        <div class="mt-6 text-center">
            <a href="@Url.Action("SmoothExperienceSurvey", "RefereeSurvey")"
               class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-6 rounded-lg">
                返回填寫頁面
            </a>
        </div>
    </div>

    <!-- **雷達圖 JS** -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let radarData = {
                labels: @Html.Raw(Json.Encode(ViewBag.Categories)),
                datasets: [{
                    label: "平均分數",
                    data: @Html.Raw(Json.Encode(ViewBag.Scores)),
                    backgroundColor: "rgba(54, 162, 235, 0.2)",
                    borderColor: "rgba(54, 162, 235, 1)",
                    borderWidth: 2
                }]
            };

            let ctx = document.getElementById("radarChart").getContext("2d");
            new Chart(ctx, {
                type: "radar",
                data: radarData,
                options: {
                    responsive: true,
                    scale: {
                        ticks: { beginAtZero: true, max: 5 }
                    }
                }
            });
        });
    </script>
</body>
</html>