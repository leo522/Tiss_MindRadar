@{
    ViewBag.Title = "流暢經驗_裁判版";
    Layout = "~/Views/Shared/_MindRadarLayout.cshtml";
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>流暢經驗_裁判版</title>
</head>
<body class="bg-gray-100">
    <div class="flex justify-between items-center py-4 px-6 bg-white shadow-md">
        <div class="text-2xl font-bold text-gray-800">
            歡迎, @ViewBag.RefereeName <span class="text-lg text-gray-600">(隊伍: @ViewBag.RefereeTeamName)</span>
        </div>
        <div>
            <img src="~/img/TissLogo.jpg" alt="Logo" class="h-16 mx-auto">
        </div>
    </div>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold text-center mb-6">流暢經驗量表</h1>

        @using (Html.BeginForm("SubmitFlowExperience", "Survey", FormMethod.Post, new { id = "flowExperienceForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="table-container">
                <table class="responsive-table sticky-header border-collapse border border-gray-400 w-full">
                    <thead>
                        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                            <th class="py-3 px-6 text-center w-1/10 border border-gray-400">流暢經驗</th>
                            <th class="py-3 px-6 text-center w-1/10 border border-gray-400">請根據自己的實際狀況，填答以下15題</th>
                            <th class="py-3 px-6 text-center w-1/10 min-w-[80px] border border-gray-400">非常不符合</th>
                            <th class="py-3 px-6 text-center w-1/10 min-w-[80px] border border-gray-400">不符合</th>
                            <th class="py-3 px-6 text-center w-1/10 min-w-[80px] border border-gray-400">普通</th>
                            <th class="py-3 px-6 text-center w-1/10 min-w-[80px] border border-gray-400">符合</th>
                            <th class="py-3 px-6 text-center w-1/8 min-w-[80px] border border-gray-400">非常符合</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700 text-sm">
                        @foreach (var category in Model)
                        {
                            var questionCount = category.Questions.Count;
                            bool isFirstRow = true;

                            foreach (var item in category.Questions)
                            {
                                <tr class="border-b border-gray-200 hover:bg-gray-100">
                                    @if (isFirstRow)
                                    {
                                        <td rowspan="@questionCount" class="py-2 px-4 font-bold text-center align-middle border border-gray-400 bg-gray-300">
                                            @category.CategoryItem
                                        </td>
                                        isFirstRow = false;
                                    }
                                    <td class="py-3 px-1 text-left break-words whitespace-normal overflow-visible w-1/2 border border-gray-400">
                                        <span class="font-bold mr-2">@item.QuestionID.</span>@item.QuestionText
                                    </td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <td class="py-3 px-4 text-center border border-gray-400">
                                            <input type="radio" name="responses[@item.QuestionID]" value="@i" class="form-radio text-blue-600 w-5 h-5">
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-6 text-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    提交答案
                </button>
            </div>
        }
    </div>

    <script>
        document.getElementById('flowExperienceForm').addEventListener('submit', function (e) {
            let missingQuestions = [];

            document.querySelectorAll('tbody tr').forEach(row => {
                const questionNumber = row.querySelector('td:nth-child(2) span')?.textContent.trim();
                const radioButtons = row.querySelectorAll('input[type="radio"]');
                const isChecked = [...radioButtons].some(radio => radio.checked);

                if (!isChecked && questionNumber) {
                    missingQuestions.push(questionNumber);
                }
            });

            if (missingQuestions.length > 0) {
                e.preventDefault(); // 阻止表單提交
                Swal.fire({
                    icon: 'error',
                    title: '未填寫答案',
                    html: `請填寫以下題號的答案：<br><strong>${missingQuestions.join(", ")}</strong>`,
                    confirmButtonText: '確定'
                });
            }
        });
    </script>
</body>
</html>