@{
    ViewBag.Title = "流暢經驗_裁判版";
    Layout = "~/Views/Shared/_MindRadarLayout.cshtml";
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>流暢經驗_裁判版</title>
</head>
<body class="bg-gray-100">
    <div class="flex justify-between items-center py-4 px-6 bg-white shadow-md">
        <div class="text-2xl font-bold text-gray-800">
            歡迎, @ViewBag.RefereeName <span class="text-lg text-gray-600">(隊伍: @ViewBag.RefereeTeamName)</span>
        </div>
        <div>
            <img src="~/img/TissLogo.jpg" alt="Logo" class="h-16 mx-auto">
        </div>
    </div>
    <div class="mt-6">
        <a href="@Url.Action("ProfessionalCapabilitiesSurvey", "RefereeSurvey")"
           class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-6 rounded-lg" id="switchToProfessional">
            切換到專業能力量表
        </a>
    </div>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold text-center mb-6">流暢經驗量表</h1>

        @using (Html.BeginForm("SubmitSmoothExperienceSurvey", "RefereeSurvey", FormMethod.Post, new { id = "flowExperienceForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="table-container">
                <table class="responsive-table border border-gray-400 w-full">
                    <thead class="bg-gray-700 text-white font-bold text-sm">
                        <tr>
                            <th class="py-3 px-6 text-center border border-gray-400">流暢經驗</th>
                            <th class="py-3 px-6 text-center border border-gray-400">題目</th>
                            <th class="py-3 px-6 text-center border border-gray-400">1</th>
                            <th class="py-3 px-6 text-center border border-gray-400">2</th>
                            <th class="py-3 px-6 text-center border border-gray-400">3</th>
                            <th class="py-3 px-6 text-center border border-gray-400">4</th>
                            <th class="py-3 px-6 text-center border border-gray-400">5</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            var questionCount = category.Questions.Count;
                            bool isFirstRow = true;
                            int rowIndex = 0;

                            foreach (var item in category.Questions)
                            {
                                <tr class="border-b border-gray-200 @(rowIndex % 2 == 0 ? "bg-white" : "bg-gray-100") hover:bg-gray-200">
                                    @if (isFirstRow)
                                    {
                                        <td rowspan="@questionCount" class="py-3 px-1 text-left border border-gray-400 bg-blue-200 font-bold text-center">
                                            @category.CategoryItem
                                        </td>
                                        isFirstRow = false;
                                    }
                                    <td class="py-3 px-1 text-left border border-gray-400">@item.QuestionID. @item.QuestionText</td>
                                    @for (int j = 1; j <= 5; j++)
                                    {
                                        <td class="py-3 px-4 text-center border border-gray-400">
                                            <input type="radio" name="responses[@item.QuestionID]" value="@j" class="form-radio text-blue-600 w-5 h-5">
                                        </td>
                                    }
                                </tr>
                                rowIndex++;
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-6 text-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    提交答案
                </button>
                <a href="@Url.Action("SmoothExperienceResult", "RefereeRawData")"
                   class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-lg ml-4">
                    查看結果
                </a>
            </div>
        }
    </div>

<script>
   document.getElementById('flowExperienceForm').addEventListener('submit', function (e) {
    e.preventDefault();

    let responses = [];

    document.querySelectorAll('tbody tr').forEach(row => {
        let questionId = row.querySelector('td:nth-child(2) span')?.textContent.trim();
        let selectedOption = row.querySelector('input[type="radio"]:checked');

        if (selectedOption) {
            responses.push({
                QuestionID: parseInt(questionId),
                Score: parseInt(selectedOption.value)
            });
        }
    });

    if (responses.length === 0) {
        Swal.fire({
            icon: 'error',
            title: '未填寫答案',
            text: '請填寫至少一個問題',
            confirmButtonText: '確定'
        });
        return;
    }

    fetch('@Url.Action("SubmitSmoothExperienceSurvey", "RefereeSurvey")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json' //確保是JSON
        },
        body: JSON.stringify({ Responses: responses }) //轉換成JSON
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: '提交成功',
                text: data.message,
                confirmButtonText: '確定'
            }).then(() => {
                window.location.reload();
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: '提交失敗',
                text: data.message,
                confirmButtonText: '確定'
            });
        }
    })
    .catch(error => {
        Swal.fire({
            icon: 'error',
            title: '系統錯誤',
            text: '請稍後再試！',
            confirmButtonText: '確定'
        });
    });
});
</script>
</body>
</html>