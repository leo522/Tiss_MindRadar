@model IEnumerable<Tiss_MindRadar.Models.MentalState>
@{
    Layout = "~/Views/Shared/_MindRadarLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/MindRadarCss/MentalState.css" rel="stylesheet" />
</head>
<body class="bg-gray-100">
    <div class="flex justify-between items-center py-4 px-6 bg-white shadow-md">
        <div class="text-2xl font-bold text-gray-800">
            歡迎, @ViewBag.UserName <span class="text-lg text-gray-600">(年齡: @ViewBag.Age 歲 | 隊伍: @ViewBag.TeamName)</span>
        </div>
        <div>
            <img src="~/img/TissLogo.jpg" alt="Logo" class="h-16 mx-auto">
        </div>
    </div>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold text-center mb-6">心理狀態檢測</h1>
        <p class="text-gray-700 text-center mb-4">
            填答方式：請仔細閱讀每一題，以近一個月的情況為評估基礎，將符合你的狀況圈起來。
        </p>
        <div class="flex justify-between items-center mb-4">
            <a href="@Url.Action("MentalStateRadarChart", "ChartRadar")"
               class="bg-amber-500 hover:bg-amber-600 text-white font-bold py-2 px-6 rounded-lg">
                查看上一次心理狀態檢測結果
            </a>
            <a href="@Url.Action("MentalPhysicalState", "Survey")"
               class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-6 rounded-lg">
                跳轉到身心狀態檢測
            </a>
        </div>
        @using (Html.BeginForm("SubmitMentalState", "Survey", FormMethod.Post, new { id = "mentalStateForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white shadow-md rounded">
                    <thead>
                        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                            <th class="py-3 px-6 text-left">題號</th>
                            <th class="py-3 px-6 text-left">題目</th>
                            <th class="py-3 px-6 text-center">非常不符合</th>
                            <th class="py-3 px-6 text-center">不符合</th>
                            <th class="py-3 px-6 text-center">尚可</th>
                            <th class="py-3 px-6 text-center">符合</th>
                            <th class="py-3 px-6 text-center">非常符合</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700 text-sm">
                        @foreach (var item in Model)
                        {
                            <tr class="border-b border-gray-200 hover:bg-gray-100">
                                <td class="py-3 px-6 text-left">@item.QuestionNumber</td>
                                <td class="py-3 px-6 text-left">@item.QuestionText</td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <td class="py-3 px-6 text-center">
                                        <input type="radio" name="responses[@item.ID]" value="@i" class="form-radio text-blue-600 scale-150">
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-6 text-center">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    提交答案
                </button>
            </div>
        }
    </div>
</body>
</html>