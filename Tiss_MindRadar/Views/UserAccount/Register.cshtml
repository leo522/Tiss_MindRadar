@model IEnumerable<Tiss_MindRadar.Models.Team>
@{
    ViewBag.Title = "帳號註冊";
    Layout = "~/Views/Shared/_MindRadarLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>帳號註冊</title>
    <link rel="icon" href="~/img/favicon.svg" />
    <link href="~/MindRadarCss/RegisterStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="register-container">
        <div class="text-center">
            <img src="~/img/logo.svg" style="height: 45px; width: 100%;" />
        </div>
        <form id="registerForm" action="/UserAccount/Register" method="post">
            <div class="form-group">
                <label for="AccountID" title="帳號">帳號</label>
                <input type="text" class="form-control" id="AccountID" name="Jobcode" placeholder="請輸入帳號" required>
                <small id="jobcodeError" class="text-danger"></small>
            </div>
            <div class="form-group">
                <label for="Username" title="姓名">姓名</label>
                <input type="text" class="form-control" id="Username" name="UserName" placeholder="請輸入名稱" required>
            </div>
            <div class="form-group">
                <label for="Password" title="密碼">密碼</label>
                <input type="password" class="form-control" id="Password" name="pwd" placeholder="請輸入密碼" required>
                <small id="passwordError" class="text-danger"></small>
            </div>
            <div class="form-group">
                <label for="Email" title="電子郵件">電子郵件</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="請輸入電子郵件" required>
            </div>
            <div class="form-group">
                <label for="Role">角色</label>
                <select class="form-control" id="Role" name="Role" required>
                    <option value="Player">選手</option>
                    <option value="Consultant">訪談員</option>
                </select>
            </div>
            <div class="form-group" id="inviteCodeField" style="display: none;">
                <label for="InviteCode">驗證碼 (訪談員專用)</label>
                <input type="text" class="form-control" id="InviteCode" name="InviteCode" placeholder="請輸入驗證碼" />
                <small id="inviteCodeError" class="text-danger"></small>
            </div>
            <div class="form-group" id="ageField">
                <label for="Age" title="年齡">年齡</label>
                <input type="number" class="form-control" id="Age" name="Age" placeholder="請輸入年齡" required>
            </div>
            <div class="form-group" id="teamField">
                <label for="TeamID" title="所屬隊伍">所屬隊伍</label>
                <select class="form-control" id="TeamID" name="TeamID" required>
                    <option value="" disabled selected>請選擇隊伍</option>
                    @foreach (var team in ViewBag.Teams)
                    {
                        <option value="@team.TeamID">@team.TeamName</option>
                    }
                </select>
                <small id="teamError" class="text-danger"></small>
            </div>
            <button type="submit" class="btn btn-primary btn-block" title="註冊">註冊</button>
        </form>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleField = document.getElementById("Role");
            const inviteCodeField = document.getElementById("inviteCodeField");
            const ageField = document.getElementById("ageField");
            const teamField = document.getElementById("teamField");
            const officialDomain = "@("tiss.org.tw")";
            // 角色變更時，更新欄位顯示
            roleField.addEventListener("change", function () {
                if (this.value === "Consultant") {
                    inviteCodeField.style.display = "block";
                    ageField.style.display = "none";
                    teamField.style.display = "none";
                    document.getElementById("Age").removeAttribute("required");
                    document.getElementById("TeamID").removeAttribute("required");
                } else {
                    inviteCodeField.style.display = "none";
                    ageField.style.display = "block";
                    teamField.style.display = "block";
                    document.getElementById("Age").setAttribute("required", "required");
                    document.getElementById("TeamID").setAttribute("required", "required");
                }
            });

            // 預設處理（防止刷新時狀態錯誤）
            roleField.dispatchEvent(new Event("change"));

            // 表單提交事件處理
            document.getElementById("registerForm").addEventListener("submit", function (e) {
                e.preventDefault();

                const formData = new FormData(this);
                const role = formData.get("Role");
                const email = formData.get("Email");
                const inviteCode = formData.get("InviteCode");

                let errors = [];

                // 訪談員 Email 限制
                if (role === "Consultant" && !email.endsWith(officialDomain)) {
                    errors.push("註冊訪談員須使用運科中心電子郵件帳號");
                }

                // 訪談員驗證碼檢查
                if (role === "Consultant" && !inviteCode) {
                    errors.push("請輸入訪談員驗證碼");
                }

                // 顯示錯誤訊息
                if (errors.length > 0) {
                    Swal.fire({
                        icon: "error",
                        title: "註冊失敗",
                        html: errors.join("<br>"),
                    });
                    return;
                }

                // 發送 AJAX 註冊請求
                fetch(this.action, {
                    method: "POST",
                    body: new URLSearchParams(formData),
                })
                .then(response => response.json())
                .then(data => {
                    Swal.fire({
                        icon: data.success ? "success" : "error",
                        title: data.success ? "註冊成功" : "註冊失敗",
                        text: data.message,
                    }).then(() => {
                        if (data.success) window.location.href = "/UserAccount/Login";
                    });
                })
                .catch(() => {
                    Swal.fire({
                        icon: "error",
                        title: "錯誤",
                        text: "發生未知錯誤，請稍後再試。",
                    });
                });
            });
        });
    </script>
</body>
</html>