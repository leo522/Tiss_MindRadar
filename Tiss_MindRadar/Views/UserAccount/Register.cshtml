        document.addEventListener("DOMContentLoaded", function () {
    const officialDomain = "@("tiss.org.tw")";
    const roleField = document.getElementById("Role");
    const inviteCodeField = document.getElementById("inviteCodeField");
    const emailField = document.getElementById("Email");

    // 當選擇訪談員時，顯示驗證碼欄位
    roleField.addEventListener("change", function () {
        if (this.value === "Consultant") {
            inviteCodeField.style.display = "block";
        } else {
            inviteCodeField.style.display = "none";
        }
    });

    // 表單提交處理
    document.getElementById("registerForm").addEventListener("submit", function (e) {
        e.preventDefault(); // 阻止默認提交

        const role = roleField.value;
        const email = emailField.value;
        const inviteCode = document.getElementById("InviteCode").value.trim();

        let errorMessages = []; // 儲存錯誤訊息

        // 角色檢查
        if (role !== "Player" && role !== "Consultant") {
            errorMessages.push("請選擇有效角色");
        }

        // 限制訪談員 Email
        if (role === "Consultant" && !email.endsWith(officialDomain)) {
            errorMessages.push("註冊訪談員須使用運科中心電子郵件帳號");
        }

        // 邀請碼驗證
        if (role === "Consultant" && inviteCode === "") {
            errorMessages.push("請輸入驗證碼");
        }

        // 如果有錯誤，顯示 SweetAlert2 提示視窗
        if (errorMessages.length > 0) {
            Swal.fire({
                icon: "error",
                title: "註冊失敗",
                html: errorMessages.join("<br>"), // 顯示多行錯誤訊息
            });
            return;
        }

        // AJAX請求
        const formData = new FormData(this);
        fetch(this.action, {
            method: "POST",
            body: new URLSearchParams(formData),
        })
            .then((response) => response.json())
            .then((data) => {
                Swal.fire({
                    icon: data.success ? "success" : "error",
                    title: data.success ? "成功" : "錯誤",
                    text: data.message,
                }).then(() => {
                    if (data.success) window.location.href = "/UserAccount/Login";
                });
            })
            .catch(() => {
                Swal.fire({
                    icon: "error",
                    title: "錯誤",
                    text: "發生未知錯誤，請稍後再試。",
                });
            });
    });
});

